<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bcc7ff"
    tools:context="com.example.dell.server.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="vertical"
        android:paddingBottom="15dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="15dp"

        >

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            >

            <EditText
                android:id="@+id/reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Registration number"
                android:inputType="textCapWords"

                android:textColor="#000000"
                android:textSize="28dp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <TextView
                android:id="@+id/mac"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:hint="Mac Id"

                android:textSize="25dp"
                android:padding="5dp"
                />
        </android.support.design.widget.TextInputLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/send"
                style="?android:backgroundDimAmount"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:layout_marginLeft="25dp"
                android:layout_marginStart="25dp"
                android:background="@drawable/button_style"
                android:onClick="onSend"
                android:text="Send" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/clear"
                style="?android:backgroundDimAmount"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/send"
                android:layout_alignBottom="@+id/send"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/button_style"
                android:onClick="onClear"
                android:text="Clear" />
        </RelativeLayout>
        <TextView
            android:id="@+id/server"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SERVER RESPONSE"
            android:textAlignment="center"
            android:layout_marginTop="28dp"
            android:textSize="28dp"/>
        <TextView
            android:id="@+id/disp"
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:textAlignment="center"
            android:text="he"
            android:textSize="22dp"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:textColor="#7c2d00"
            android:background="#44424242"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:id="@+id/gif"
        android:background="#60000009">



    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifv"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="150dp"

        android:src="@drawable/comm"
        >

    </pl.droidsonroids.gif.GifImageView>
    </LinearLayout>


</android.widget.RelativeLayout>
